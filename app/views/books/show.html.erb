<div id="show" class ="row">

  <section class= "show-one">
    <h1><%= @book.name %></h1>
    <p><b>By:</b> <%= @book.author %></p>

    <div class="voting">
      <h3><b>Votes:</b> <%=@book.votes%></h3>
      <p><%= link_to "ðŸ‘ðŸ¼", {action: "up_vote", id: @book[:id] }, method: :post %></p>
    </div>
    <p></p>
    <p><%= @book.description%></p>

    <div class = "buttons">
      <%= button_to "Edit", {action: "edit", id: @book[:id] }, method: :get %>
      <%= button_to "Delete", {action: "destroy", id: @book[:id] }, method: :delete, data: { confirm: "Do you really want to delete this book?"} %>
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <%end%>
    </div>
    <p></p>

    <section class= "show-one" class = "small-12, medium-8, large-6 columns">
      <% if @book[:image] != nil%>
        <image class="show-picture", size="10"><%= image_tag(@book.image) %></image>
      <%end%>
    </section>

    <p><%= link_to( "View All Books", books_path) %></p>
    <p><%= link_to( "View All Media", root_path) %></p>
  </section>

</div>

